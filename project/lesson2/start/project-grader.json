[{
  "name": "Project Part 1",
  "code": "ready!set!responsiveimages!",
  "tests": [
    {
      "description": "<img> have max-widths of 100%",
      "definition": {
        "nodes": "article img",
        "limit": "some",
        "cssProperty": "maxWidth",
        "equals": "100%"
      }
    },
    {
      "description": "<article>s are reasonably wide (600-1200px)",
      "definition": {
        "nodes": "article",
        "cssProperty": "width",
        "isInRange": {
          "lower": 600,
          "upper": 1200
        }
      }
    },
    {
      "description": "Page bytes are under 1.5MB (refresh to update)",
      "definition": {
        "waitForEvent": "ud-bytes-in-range",
        "exists": true
      }
    }
  ]
},
