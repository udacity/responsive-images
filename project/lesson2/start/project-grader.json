{
  "name": "Project Part 3",
  "code": "allthepictures,allthetime",
  "tests": [
    {
      "description": "There are 8 <picture>s on the page",
      "definition": {
        "nodes": "picture",
        "get": "count",
        "equals": 8
      }
    },
    {
      "description": "There are 2 <sources>s per <picture>",
      "definition": {
        "nodes": "picture",
        "children": "source",
        "get": "count",
        "equals": 2
      }
    },
    {
      "description": "There is 1 <img> per <picture>",
      "definition": {
        "nodes": "picture",
        "children": "img",
        "get": "count",
        "equals": 1
      }
    },
    {
      "description": "<img> is last child of all <picture>s",
      "definition": {
        "nodes": "picture > img:last-child",
        "exists": "true"
      }
    },
    {
      "description": "Every <img> has an alt attribute",
      "definition": {
        "nodes": "img",
        "attribute": "alt",
        "hasSubstring": ".+"
      }
    }
  ]
}]
